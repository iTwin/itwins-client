{
  "name": "@itwin/itwins-client",
  "version": "1.6.1",
  "description": "iTwins client for the iTwin platform",
  "type": "module",
  "main": "lib/cjs/itwins-client.js",
  "module": "lib/esm/itwins-client.js",
  "typings": "lib/cjs/itwins-client",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/itwins-client.d.ts",
        "default": "./lib/esm/itwins-client.js"
      },
      "require": {
        "types": "./lib/cjs/itwins-client.d.ts",
        "default": "./lib/cjs/itwins-client.js"
      }
    }
  },
  "scripts": {
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "rimraf lib",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:debug": "vitest --reporter=verbose --no-coverage",
    "change": "beachball change",
    "check": "beachball check",
    "version-bump": "beachball bump",
    "publish-package": "beachball publish --yes"
  },
  "keywords": [
    "Bentley",
    "iTwin",
    "digital-twin",
    "IModelHub",
    "project",
    "asset"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/itwins-client"
  },
  "dependencies": {
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@itwin/build-tools": "^5.1.8",
    "@itwin/core-bentley": "^5.1.8",
    "@itwin/eslint-plugin": "^5.2.1",
    "@itwin/oidc-signin-tool": "^5.0.1",
    "@types/node": "20.19.16",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/ui": "^3.2.4",
    "beachball": "^2.51.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^9.11.1",
    "jsdom": "^27.0.0",
    "rimraf": "^6.0.1",
    "source-map-loader": "^1.1.3",
    "typedoc": "^0.28.13",
    "typescript": "~5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "brace-expansion": "^1.1.12"
    }
  }
}